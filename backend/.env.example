# Server Configuration
NODE_ENV=production
PORT=3000

# CORS Configuration - Add your frontend URLs separated by commas
ALLOWED_ORIGINS=https://seu-frontend.vercel.app,http://localhost:5173

# Database Configuration
DATABASE_URL=mysql://user:password@host:port/database

# OAuth Configuration (Manus)
VITE_OAUTH_PORTAL_URL=https://oauth.manus.computer
VITE_APP_ID=your-app-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# AWS S3 Configuration (if using file uploads)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Google Sheets API (if using)
GOOGLE_SHEETS_API_KEY=your-google-sheets-api-key
